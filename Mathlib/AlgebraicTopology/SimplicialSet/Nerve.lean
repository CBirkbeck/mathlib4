    show X.map ([1].const [0] 0).op _ = X.map ([1].const [0] 0).op _
    have nec : (X.map ([0].const [n] j).op (ran.lift (hX := hX) s x)) = (s.œÄ.app (pt j) x) := by
      unfold ran.lift
      rw [StrictSegal.spineToSimplex_vertex]
