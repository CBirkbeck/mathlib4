      simp
      intro | 0 | 1 => rfl
    let facemap‚ÇÄ : tri' ‚ü∂ ar ‚ü®j.1 + k‚ÇÄ.1, (by omega)‚ü© := by
        refine StructuredArrow.homMk (.op (SimplexCategory.Œ¥ 0)) (Quiver.Hom.unop_inj ?_)
        ext z; revert z;
        simp [ar]
        intro | 0 | 1 => rfl
    let facemap‚ÇÅ : tri' ‚ü∂ ar' (inductionMap j k‚ÇÄ.succ) := by
      refine StructuredArrow.homMk (.op (SimplexCategory.Œ¥ 1)) (Quiver.Hom.unop_inj ?_)
      ext z; revert z;
      simp [ar']
      intro | 0 | 1 => rfl
