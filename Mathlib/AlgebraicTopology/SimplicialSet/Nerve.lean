theorem ran.lift.arrow_src {X : SSet.{u}} {n} {i : Fin n}
    (s : Cone (StructuredArrow.proj (op [n]) (Truncated.inclusion (n := 2)).op ‚ãô
      (Truncated.inclusion (n := 2)).op ‚ãô X)) (x : s.pt) :
    X.Œ¥ 1 (s.œÄ.app (ar i) x) = s.œÄ.app (pt i.castSucc) x :=
      by
