    let tri : ([2] : SimplexCategory) ‚ü∂ [n] :=
      mkOfLeComp j ‚ü®j.1 + k‚ÇÄ.1, (by omega)‚ü© ‚ü®j.1 + k‚ÇÄ.1 + 1, (by omega)‚ü©
