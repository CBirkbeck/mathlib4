      Int.reduceAdd, Fin.eta, homOfLE_refl, comp_obj, StructuredArrow.proj_obj,
      op_obj, const_obj_obj, const_obj_map, types_comp_apply, types_id_apply, Functor.comp_map,
      StructuredArrow.proj_map, op_map] at nat
