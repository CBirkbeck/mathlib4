  .mk (Y := op [0]‚ÇÇ) (.op (pt i))

/-- The map [1] ‚ü∂ [n] with image k : i ‚ü∂ j.-/
private
def ar {n} {i j : Fin (n+1)} (k : i ‚ü∂ j) : [1] ‚ü∂ [n] := mkOfLe _ _ k.le

/-- The object of StructuredArrow (op [n]) (Truncated.inclusion (n := 2)).op corresponding to
`ar k`. -/
