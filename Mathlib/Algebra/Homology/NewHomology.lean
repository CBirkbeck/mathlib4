noncomputable def newHomologyFunctor (i : Œπ) : HomotopyCategory C c ‚•§ C :=
  CategoryTheory.Quotient.lift _ (HomologicalComplex.newHomologyFunctor C c i) (by
    rintro K L f g ‚ü®h‚ü©
