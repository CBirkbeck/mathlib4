    . have hi'' : i = n := le_antisymm (by simpa using hi') (by simpa using hi)
      exact (K.truncGEXIsoCyclesCo n i hi'').hom ‚â´ cyclesCoMap œÜ i‚â´
        (L.truncGEXIsoCyclesCo n i hi'').inv

