        refine LinearMap.ext fun x => LinearMap.ext fun y => ?_
        have := idfk (œÅ := Representation.tprod A.œÅ B.œÅ) f g (A.œÅ g‚Åª¬π y ‚äó‚Çú[k] x)
        simpa only [Representation.tprod_apply, ModuleCat.end_def, TensorProduct.map_tmul, ‚Üê idfk2,
          mul_inv_cancel, map_one, LinearMap.one_apply] using this }
  invFun f :=
    { hom := TensorProduct.uncurry k A.V B.V C.V f.hom.flip
      comm := fun g => TensorProduct.ext' fun x y => by
        have := LinearMap.ext_iff.1 (hom_comm_apply' f g y) (A.œÅ g x)
        simpa only [ihom_obj, ModuleCat.end_def, Function.comp_apply, of_V, of_œÅ,
          Representation.linHom_apply, LinearMap.coe_comp, ‚Üê idfk2, inv_mul_cancel,
          map_one, LinearMap.one_apply] }
  left_inv f := Action.Hom.ext (TensorProduct.ext' fun _ _ => rfl)
  right_inv f := by ext; rfl

