      _ = œÜ.F ‚àò Subtype.val ‚àò œÜ.œÜ.symm ‚àò (Diffeomorph.swap M' I M) ‚àò Sum.inr := by congr
      _ = œÜ.F ‚àò Subtype.val ‚àò œÜ.œÜ.symm ‚àò Sum.inl := by congr
