/-- The interior of `M √ó N` is the product of the interiors of `M` and `N`. -/
lemma ModelWithCorners.interior_prod :
    (I.prod I').interior (M √ó M') = (I.interior M) √óÀ¢ (I'.interior M') := by
  ext p
  have aux : (interior (range ‚ÜëI)) √óÀ¢ (interior (range I')) = interior (range (I.prod I')) := by
    rw [‚Üê interior_prod_eq, ‚Üê Set.range_prod_map, modelWithCorners_prod_coe]
  constructor <;> intro hp
  ¬∑ replace hp : (I.prod I').IsInteriorPoint p := hp
    rw [ModelWithCorners.IsInteriorPoint, ‚Üê aux] at hp
    exact hp
  ¬∑ obtain ‚ü®h‚ÇÅ, h‚ÇÇ‚ü© := Set.mem_prod.mp hp
    rw [ModelWithCorners.interior] at h‚ÇÅ h‚ÇÇ
    show (I.prod I').IsInteriorPoint p
    rw [ModelWithCorners.IsInteriorPoint, ‚Üê aux]
    apply mem_prod.mpr; constructor; exacts [h‚ÇÅ, h‚ÇÇ]

/-- The boundary of `M √ó N` is `‚àÇM √ó N ‚à™ (M √ó ‚àÇN)`. -/
lemma ModelWithCorners.boundary_prod :
    (I.prod I').boundary (M √ó M') = Set.prod univ (I'.boundary M') ‚à™ Set.prod (I.boundary M) univ := by
  -- better proof: decompose M√ó M' into interior and boundary; show the latter is the complement!
  let h := calc (I.prod I').boundary (M √ó M')
    _ = ((I.prod I').interior (M √ó M'))·∂ú := (I.prod I').boundary_eq_complement_interior
    _ = ((I.interior M) √óÀ¢ (I'.interior M'))·∂ú := by rw [ModelWithCorners.interior_prod]
    _ = (I.interior M)·∂ú √óÀ¢ univ ‚à™ univ √óÀ¢ (I'.interior M')·∂ú := by rw [compl_prod_eq_union]
  rw [h, I.boundary_eq_complement_interior, I'.boundary_eq_complement_interior, union_comm]
  rfl

