      hom_inv_id_app_assoc]
    slice_lhs 1 2 => rw [‚Üê T.Œ∑.naturality (i.inv.app X), ]
    simp
  right_unit' X := by
    simp only [id_obj, NatTrans.comp_app, Functor.map_comp, comp_obj, NatTrans.hcomp_app,
      Category.assoc, NatTrans.naturality_assoc]
    slice_lhs 2 4 =>
