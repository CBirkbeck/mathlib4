  rw [‚Üê symmetryIso_hom_comp_p‚ÇÇ hf]
  infer_instance

lemma p‚ÇÅ_self_eq_p‚ÇÇ (i : Œπ) :
    p‚ÇÅ hf i i = p‚ÇÇ hf i i := by
  have := mono_of_openImmersion_presheaf (hf i)
  apply yoneda.map_injective
