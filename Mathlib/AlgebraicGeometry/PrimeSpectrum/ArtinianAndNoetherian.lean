lemma qf_artinian_Œ∫R_iff (i : Fin (K R)) :
    IsArtinian Œ∫ ((series R).qf i) ‚Üî IsArtinian R ((series R).qf i) := by
  rw [‚Üê monotone_stabilizes_iff_artinian, ‚Üê monotone_stabilizes_iff_artinian]
