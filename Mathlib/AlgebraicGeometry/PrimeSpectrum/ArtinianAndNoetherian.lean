  ¬∑ let f' : ‚Ñï ‚Üío (Submodule Œ∫ ((series R).qf i))·µí·µà := OrderHom.comp ?_ f
    pick_goal 2
    ¬∑ fconstructor
      ¬∑ exact (qfSubmoduleAgree' R i).symm.toFun
      ¬∑ intro p q h
