  ¬∑ let f' : ‚Ñï ‚Üío (Submodule R ((series R).qf i))·µí·µà := OrderHom.comp ?_ f
    pick_goal 2
    ¬∑ fconstructor
      ¬∑ exact (qfSubmoduleAgree' R i).toFun
      ¬∑ intro p q h
        exact (qfSubmoduleAgree' R i).monotone h
    obtain ‚ü®n, hn‚ü© := h f'
