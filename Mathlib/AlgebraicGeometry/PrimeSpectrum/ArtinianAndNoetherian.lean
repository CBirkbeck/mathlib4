 { toFun := OrderDual.ofDual
   invFun := OrderDual.toDual
   left_inv := by intros p; rfl
   right_inv := by intros p; rfl
   map_rel_iff' := by intros; rfl } <| (qfSubmoduleAgree R i).trans
  { toFun := OrderDual.ofDual
