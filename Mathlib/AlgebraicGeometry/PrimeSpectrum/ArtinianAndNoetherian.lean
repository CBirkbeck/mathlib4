@[simps]
def series : RelSeries ((¬∑ ‚â§ ¬∑) : Ideal R ‚Üí Ideal R ‚Üí Prop) where
  length := K R
  toFun i := ùìÇ ^ (K R - i.1)
  step i := by
    simp only [Fin.coe_castSucc, Fin.val_succ]
    apply Ideal.pow_le_pow_right
