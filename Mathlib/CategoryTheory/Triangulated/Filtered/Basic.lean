  exists_triangle_one_zero : ‚àÄ (X : C), ‚àÉ (A : C) (B : C) (_ : (GE 1).P A) (_ : (LE 0).P B)
    (f : A ‚ü∂ X) (g : X ‚ü∂ B) (h : B ‚ü∂ A‚ü¶1‚üß),
