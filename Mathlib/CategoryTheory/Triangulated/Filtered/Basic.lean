instance zero_isLE (n : ‚Ñ§) : IsLE (0 : C) n := {le := (LE n).zero}

instance zero_isGE (n : ‚Ñ§) : IsGE (0 : C) n := {ge := (GE n).zero}

instance shift_isLE_of_isLE (X : C) (n a : ‚Ñ§) [IsLE X n] : IsLE (X‚ü¶a‚üß) n :=
