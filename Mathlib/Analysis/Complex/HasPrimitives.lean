  set intIV := I ‚Ä¢ ‚à´ y : ‚Ñù in c.im..z.im, f (z.re + y * I)
  set intV := ‚à´ x : ‚Ñù in z.re..w.re, f (x + z.im * I)
  set intVI := I ‚Ä¢ ‚à´ y : ‚Ñù in z.im..w.im, f (w.re + y * I)
  let intVII := ‚à´ x : ‚Ñù in z.re..w.re, f (x + c.im * I)
