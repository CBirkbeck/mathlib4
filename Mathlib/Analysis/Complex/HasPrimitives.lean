  have intIdecomp : intI = intIII + intVII
  ¬∑ rw [intervalIntegral.integral_add_adjacent_intervals] <;> apply integrableHoriz
    ¬∑ simp only [re_add_im, mem_ball, dist_self, hr]
    ¬∑ exact cornerRectangle_in_disc hz
